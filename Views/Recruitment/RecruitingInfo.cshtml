@model IEnumerable<NGO_Web_Demo.Models.VolunteerEventVM>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@if (TempData["Info"] != null)
{
    <div class="alert alert-success">
        @TempData["Info"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<h1>I guess at least it works</h1>

<h3>Submitted Users:</h3>
<table border="1" cellpadding="5">
    <tr>
        <th>Volunteer ID</th>
        <th>Event</th>
        <th>Name</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Age</th>
        <th>Shift starts at</th>
        <th>Work Hour</th>
        <th>Rewarded points</th>
        <th>Event completion</th>
        <th>Current status</th>
    </tr>
    @foreach (var v in Model)
    {
        <tr>
            <td>@v.VolunteerID</td>
            <td>@v.EventID</td>
            <td>@v.Name</td>
            <td>@v.Email</td>
            <td>@v.PhoneNumber</td>
            <td>@v.Age</td>
            <td>@v.ShiftStart</td>
            <td>@v.WorkHours</td>
            <td>@v.Points</td>
            <td>@v.EventCompletion</td>
            <td>@v.ApprovalStatus</td>
            <td>
                @if (v.ApprovalStatus == EventApprovalStatus.Pending)
                {
                    <form asp-action="Approve" asp-route-id="@v.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-success btn-sm">Approve</button>
                    </form>
                    <form asp-action="Reject" asp-route-id="@v.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                    </form>
                }
                else
                {
                    <span class="badge bg-info">@v.ApprovalStatus</span>
                }
            </td>

        </tr>
    }
</table>

<h1>Volunteer Recruitment!!</h1>
<h3>Help out this event by landing your hand!</h3>

<p>
    <a asp-controller="Home" asp-action="Index" style="padding: 8px 16px; background-color: #007bff; color: white; text-decoration: none; border-radius: 4px;">Click Me</a>
</p>
@model PaymentVM

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<h2 class="text-center">Donate to @Model.EventTitle</h2>
<div class="card mt-4 p-4 shadow">
    <h4>Event Details</h4>
    <ul>
        <li><strong>Event:</strong> @Model.EventTitle</li>
        <li><strong>Location:</strong> @Model.EventLocation</li>
    </ul>
</div>

<form asp-action="Process" asp-controller="Payment" method="post" class="mt-4" data-ajax="false">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="EventID" />
    <input type="hidden" asp-for="EventTitle" />
    <input type="hidden" asp-for="EventLocation" />
    <input type="hidden" asp-for="UserEmail" />

    <div class="form-group mb-3">
        <label asp-for="Amount" class="form-label">Donation Amount (RM)</label>

        <!-- Quick Amount Selection Buttons -->
        <div class="mb-3">
            <small class="text-muted">Quick select:</small><br>
            <div class="btn-group" role="group" aria-label="Quick amount selection">
                <button type="button" class="btn btn-outline-primary btn-sm" onclick="setAmount(10)">RM 10</button>
                <button type="button" class="btn btn-outline-primary btn-sm" onclick="setAmount(25)">RM 25</button>
                <button type="button" class="btn btn-outline-primary btn-sm" onclick="setAmount(50)">RM 50</button>
                <button type="button" class="btn btn-outline-primary btn-sm" onclick="setAmount(100)">RM 100</button>
            </div>
        </div>

        <input asp-for="Amount" class="form-control" placeholder="Enter amount or select above" id="donationAmount" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="PaymentMethod" class="form-label">Payment Method</label>
        <select asp-for="PaymentMethod" id="paymentMethod" class="form-control">
            <option value="">-- Select Method --</option>
            <option value="Credit Card">Credit Card</option>
            <option value="Debit Card">Debit Card</option>
            <option value="Online Banking">Online Banking</option>
            <option value="E-wallet">E-wallet</option>
        </select>
        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
    </div>

    <div class="form-group mb-3" id="creditCardField" style="display:none;">
        <label asp-for="CreditCardNumber" class="form-label">Credit Card Number</label>
        <input asp-for="CreditCardNumber" class="form-control" placeholder="Enter credit card number" />
        <span asp-validation-for="CreditCardNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Donate</button>
</form>

<script>
    // Function to set donation amount from preset buttons
    function setAmount(amount) {
        document.getElementById("donationAmount").value = amount;

        // Add visual feedback - highlight selected button briefly
        event.target.classList.add("btn-primary");
        event.target.classList.remove("btn-outline-primary");

        setTimeout(function() {
            event.target.classList.remove("btn-primary");
            event.target.classList.add("btn-outline-primary");
        }, 200);
    }

    // Existing payment method toggle functionality
    document.getElementById("paymentMethod").addEventListener("change", function () {
        let ccField = document.getElementById("creditCardField");
        if (this.value === "Credit Card" || this.value === "Debit Card") {
            ccField.style.display = "block";
        } else {
            ccField.style.display = "none";
        }
    });
</script>
<div class="row">
    @foreach (var e in Model)
    {
        <div class="col-md-4">
            <div class="card event-card">
                @if (!string.IsNullOrEmpty(e.EventPhotoURL))
                {
                    <img src="/events/@e.EventPhotoURL" class="card-img-top event-image" alt="@e.EventTitle">
                }
                else
                {
                    <div class="no-image">
                        <small>No Image Available</small>
                    </div>
                }

                <div class="card-body">
                    <h5 class="card-title">@e.EventTitle</h5>
                    <p class="card-text">
                        <i class="bi bi-geo-alt"></i> @e.EventLocation
                    </p>
                    <p class="card-text">
                        <i class="bi bi-calendar"></i> @e.EventStartDate.ToString("dd MMMM yyyy")
                    </p>
                    <p class="card-text">
                        <i class="bi bi-calendar"></i> @e.EventEndDate.ToString("dd MMMM yyyy")
                    </p>
                    <p class="card-text">
                        @(e.EventDescription?.Length > 100 ? e.EventDescription.Substring(0, 100) + "..." : e.EventDescription)
                    </p>

                    <hr />

                    <div class="d-flex justify-content-between align-items-center">
                        <span class="badge bg-secondary">Event ID: @e.EventID</span>
                        <div class="btn-group">
                            <a href="@Url.Action("Details", "EventHistory", new { id = e.EventID })" class="btn btn-sm btn-info text-white">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
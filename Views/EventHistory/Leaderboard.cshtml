@model IEnumerable<LeaderboardVM>

@{
    ViewBag.Title = "Volunteer Leaderboard";
}

@section head {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        .leaderboard-container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
        }

        .leaderboard-header {
            text-align: center;
            margin-bottom: 30px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        }

        .leaderboard-title {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .leaderboard-subtitle {
            font-size: 1.2rem;
            opacity: 0.9;
        }

        .podium {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            gap: 20px;
            margin-bottom: 40px;
        }

        .podium-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            text-align: center;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            position: relative;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .podium-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        }

        .podium-1st {
            background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
            color: #333;
            order: 2;
            transform: scale(1.1);
        }

        .podium-2nd {
            background: linear-gradient(135deg, #c0c0c0 0%, #e8e8e8 100%);
            color: #333;
            order: 1;
        }

        .podium-3rd {
            background: linear-gradient(135deg, #cd7f32 0%, #daa520 100%);
            color: #333;
            order: 3;
        }

        .rank-icon {
            font-size: 3rem;
            margin-bottom: 15px;
        }

        .user-name {
            font-size: 1.3rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .user-points {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .user-events {
            font-size: 1rem;
            opacity: 0.8;
        }

        .leaderboard-list {
            background: white;
            border-radius: 15px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .list-header {
            background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
            color: white;
            padding: 20px;
            font-weight: bold;
            display: grid;
            grid-template-columns: 80px 1fr 150px 120px 150px;
            gap: 15px;
            align-items: center;
        }

        .leaderboard-row {
            display: grid;
            grid-template-columns: 80px 1fr 150px 120px 150px;
            gap: 15px;
            padding: 20px;
            border-bottom: 1px solid #f0f0f0;
            align-items: center;
            transition: background-color 0.3s ease;
        }

        .leaderboard-row:hover {
            background-color: #f8f9fa;
        }

        .leaderboard-row:last-child {
            border-bottom: none;
        }

        .rank-number {
            font-size: 1.5rem;
            font-weight: bold;
            text-align: center;
        }

        .rank-1 { color: #ffd700; }
        .rank-2 { color: #c0c0c0; }
        .rank-3 { color: #cd7f32; }
        .rank-other { color: #666; }

        .user-info {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
        }

        .points-display {
            font-size: 1.2rem;
            font-weight: bold;
            color: #2c3e50;
            text-align: center;
        }

        .events-count {
            text-align: center;
            color: #666;
        }

        .last-activity {
            text-align: center;
            font-size: 0.9rem;
            color: #999;
        }

        .no-data {
            text-align: center;
            padding: 60px 20px;
            color: #666;
        }

        .no-data-icon {
            font-size: 4rem;
            margin-bottom: 20px;
            opacity: 0.5;
        }

        .back-button {
            margin-bottom: 20px;
        }

        .btn-back {
            background: #6c757d;
            color: white;
            padding: 10px 20px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: 500;
            transition: background 0.3s ease;
        }

        .btn-back:hover {
            background: #5a6268;
            text-decoration: none;
            color: white;
        }

        /* Responsive Design */
        
            .podium {
                grid-template-columns: 1fr;
                gap: 15px;
            }
            
            .podium-1st {
                order: 1;
                transform: none;
            }
            
            .podium-2nd { order: 2; }
            .podium-3rd { order: 3; }
            
            .list-header,
            .leaderboard-row {
                grid-template-columns: 50px 1fr 80px;
                gap: 10px;
            }
            
            .events-count,
            .last-activity {
                display: none;
            }
    </style>
}

<div class="leaderboard-container">
    <div class="back-button">
        <a href="@Url.Action("MyVolunteer")" class="btn-back">← Back to My Volunteer History</a>
    </div>

    <!-- Header -->
    <div class="leaderboard-header">
        <h1 class="leaderboard-title">🏆 Volunteer Leaderboard</h1>
        <p class="leaderboard-subtitle">Top volunteers making a difference in our community</p>
    </div>

    @if (Model.Any())
    {
        <!-- Top 3 Podium -->
        @if (Model.Count() >= 3)
        {
            <div class="podium">
                @foreach (var volunteer in Model.Take(3))
                {
                    <div class="podium-card @(volunteer.Rank == 1 ? "podium-1st" : volunteer.Rank == 2 ? "podium-2nd" : "podium-3rd")">
                        <div class="rank-icon">
                            @if (volunteer.Rank == 1) { <span>🥇</span> }
                            else if (volunteer.Rank == 2) { <span>🥈</span> }
                            else { <span>🥉</span> }
                        </div>
                        <div class="user-name">@volunteer.DisplayName</div>
                        <div class="user-points">@volunteer.TotalPoints</div>
                        <div class="user-events">@volunteer.TotalEvents events</div>
                    </div>
                }
            </div>
        }

        <!-- Full Leaderboard List -->
        <div class="leaderboard-list">
            <div class="list-header">
                <div>Rank</div>
                <div>Volunteer</div>
                <div>Points</div>
                <div class="events-count">Events</div>
                <div class="last-activity">Last Activity</div>
            </div>

            @foreach (var volunteer in Model)
            {
                <div class="leaderboard-row">
                    <div class="rank-number @(volunteer.Rank <= 3 ? $"rank-{volunteer.Rank}" : "rank-other")">
                        #@volunteer.Rank
                    </div>
                    
                    <div class="user-info">
                        <div class="user-avatar">
                            @volunteer.DisplayName.Substring(0, 1).ToUpper()
                        </div>
                        <div>
                            <div class="fw-bold">@volunteer.DisplayName</div>
                            <small class="text-muted">@volunteer.UserEmail</small>
                        </div>
                    </div>
                    
                    <div class="points-display">
                        @volunteer.TotalPoints
                    </div>
                    
                    <div class="events-count">
                        @volunteer.TotalEvents
                    </div>
                    
                    <div class="last-activity">
                        @volunteer.LastActivityFormatted
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="no-data">
            <div class="no-data-icon">🏆</div>
            <h3>No Volunteers Yet</h3>
            <p>Be the first to volunteer and earn your place on the leaderboard!</p>
            <a href="@Url.Action("Index")" class="btn btn-primary">
                <i class="bi bi-calendar-event me-2"></i>Browse Events
            </a>
        </div>
    }
</div>
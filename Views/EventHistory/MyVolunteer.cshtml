@model IEnumerable<VolunteerHistoryVM>

@{
    ViewBag.Title = "My Volunteer History";
}

<style>
    .stats-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 25px;
        border-radius: 15px;
        text-align: center;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
        }

    .stat-number {
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
    }

    .stat-label {
        font-size: 1.1rem;
        opacity: 0.9;
    }

    .volunteer-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .volunteer-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

    .card-header {
        background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
        color: white;
        padding: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 10px;
    }

    .event-title {
        font-size: 1.4rem;
        font-weight: bold;
        margin: 0;
        flex: 1;
        min-width: 200px;
    }

    .points-badge {
        background: rgba(255, 255, 255, 0.2);
        padding: 8px 16px;
        border-radius: 25px;
        font-weight: bold;
        font-size: 1rem;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .card-body {
        padding: 25px;
    }

    .event-info {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 20px;
    }

    .info-item {
        display: flex;
        align-items: center;
        gap: 10px;
        color: #555;
        font-size: 0.95rem;
    }

    .info-icon {
        width: 24px;
        height: 24px;
        background: #3498db;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 12px;
        flex-shrink: 0;
    }

    .status-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 15px;
        padding-top: 15px;
        border-top: 1px solid #eee;
    }

    .status-badges {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .status-badge {
        display: inline-block;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: bold;
        text-transform: uppercase;
        border: 2px solid;
    }

    .badge-approved {
        background: #d4edda;
        color: #155724;
        border-color: #28a745;
    }

    .badge-pending {
        background: #fff3cd;
        color: #856404;
        border-color: #ffc107;
    }

    .badge-rejected {
        background: #f8d7da;
        color: #721c24;
        border-color: #dc3545;
    }

    .badge-completed {
        background: #cce5ff;
        color: #004085;
        border-color: #0066cc;
    }

    .badge-waiting {
        background: #e2e3e5;
        color: #383d41;
        border-color: #6c757d;
    }

    .event-status-indicator {
        font-size: 0.9rem;
        font-weight: 500;
    }

    .past-event {
        color: #6c757d;
    }

    .upcoming-event {
        color: #28a745;
        font-weight: bold;
    }

    .no-volunteers {
        text-align: center;
        padding: 80px 20px;
        color: #666;
    }

    .no-volunteers-icon {
        font-size: 5rem;
        margin-bottom: 20px;
        opacity: 0.3;
    }

    .page-header {
        text-align: center;
        margin-bottom: 40px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 40px 20px;
        border-radius: 15px;
    }

    .page-title {
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .page-subtitle {
        font-size: 1.1rem;
        opacity: 0.9;
    }

    .action-buttons {
        text-align: center;
        margin: 30px 0;
    }

    .btn-custom {
        padding: 12px 24px;
        border-radius: 25px;
        font-weight: 500;
        text-decoration: none;
        display: inline-block;
        margin: 0 10px 10px 0;
        transition: all 0.3s ease;
    }

    .btn-primary-custom {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
    }

        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(102, 126, 234, 0.4);
            color: white;
        }

    .btn-warning-custom {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
        border: none;
    }

        .btn-warning-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(245, 87, 108, 0.4);
            color: white;
        }

    .btn-outline-custom {
        background: white;
        color: #667eea;
        border: 2px solid #667eea;
    }

        .btn-outline-custom:hover {
            background: #667eea;
            color: white;
            transform: translateY(-2px);
        }

        .stats-container

    {
        grid-template-columns: 1fr;
        gap: 15px;
    }

    .card-header {
        flex-direction: column;
        text-align: center;
    }

    .event-info {
        grid-template-columns: 1fr;
        gap: 15px;
    }

    .status-section {
        flex-direction: column;
        align-items: flex-start;
    }

    }
</style>

<div class="page-header">
    <h1 class="page-title">🤝 My Volunteer History</h1>
    <p class="page-subtitle">Track your volunteering journey and contributions</p>
</div>

<!-- Statistics Cards -->
<div class="stats-container">
    <div class="stat-card">
        <span class="stat-number">@ViewBag.TotalPoints</span>
        <div class="stat-label">🏆 Total Points Earned</div>
    </div>
    <div class="stat-card">
        <span class="stat-number">@ViewBag.TotalVolunteers</span>
        <div class="stat-label">📋 Events Participated</div>
    </div>
    <div class="stat-card">
        <span class="stat-number">@ViewBag.CompletedEvents</span>
        <div class="stat-label">✅ Events Completed</div>
    </div>
    <div class="stat-card">
        <span class="stat-number">@ViewBag.PendingApprovals</span>
        <div class="stat-label">⏳ Pending Approvals</div>
    </div>
</div>

<!-- Action Buttons -->
<div class="action-buttons">
    <a href="@Url.Action("Index")" class="btn-custom btn-primary-custom">
        📅 Browse More Events
    </a>
    <a href="@Url.Action("Leaderboard")" class="btn-custom btn-warning-custom">
        🏆 View Leaderboard
    </a>
</div>

@if (Model.Any())
{
    <h2 class="mb-4" style="color: #2c3e50;">📋 Your Volunteer Activities</h2>

    @foreach (var volunteer in Model)
    {
        <div class="volunteer-card">
            <div class="card-header">
                <h3 class="event-title">@volunteer.EventTitle</h3>
                <div class="points-badge">
                    🏆 +@volunteer.Points pts
                </div>
            </div>

            <div class="card-body">
                <div class="event-info">
                    <div class="info-item">
                        <div class="info-icon">📅</div>
                        <div>
                            <strong>Event Date:</strong><br>
                            @volunteer.FormattedEventDate
                        </div>
                    </div>

                    <div class="info-item">
                        <div class="info-icon">📍</div>
                        <div>
                            <strong>Location:</strong><br>
                            @volunteer.EventLocation
                        </div>
                    </div>

                    <div class="info-item">
                        <div class="info-icon">⏰</div>
                        <div>
                            <strong>Your Shift:</strong><br>
                            @volunteer.FormattedShiftStart
                        </div>
                    </div>

                    <div class="info-item">
                        <div class="info-icon">🕒</div>
                        <div>
                            <strong>Work Hours:</strong><br>
                            @volunteer.WorkHours hours
                        </div>
                    </div>
                </div>

                <div class="status-section">
                    <div class="status-badges">
                        <span class="status-badge @(volunteer.ApprovalStatus == EventApprovalStatus.Approved ? "badge-approved" :
                                                                                 volunteer.ApprovalStatus == EventApprovalStatus.Pending ? "badge-pending" : "badge-rejected")">
                    @volunteer.ApprovalStatus
                </span>

                        <span class="status-badge @(volunteer.EventCompletion == EventStatus.Completed ? "badge-completed" :
                                                                         volunteer.EventCompletion == EventStatus.Waiting ? "badge-waiting" : "badge-rejected")">
                    @volunteer.EventCompletion
                </span>
            </div>

                    <div class="event-status-indicator">
                @if (volunteer.IsPastEvent)
                        {
                            <span class="past-event">✅ Past Event</span>
                        }
                        else
                        {
                            <span class="upcoming-event">🔜 Upcoming Event</span>
                        }
                    </div>
                </div>

                <!-- Event Details Button -->
                <div class="mt-3">
                    <a href="@Url.Action("Details", new { id = volunteer.EventID })"
                       class="btn btn-outline-info btn-sm">
                        📄 View Event Details
                    </a>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="no-volunteers">
        <div class="no-volunteers-icon">🤝</div>
        <h3>No Volunteer History Yet</h3>
        <p>You haven't volunteered for any events yet. Start making a difference today!</p>
        <div class="mt-4">
            <a href="@Url.Action("Index")" class="btn-custom btn-primary-custom">
                🌟 Start Volunteering
            </a>
        </div>
    </div>
}

<div class="text-center mt-5">
    <a href="@Url.Action("Index")" class="btn-custom btn-outline-custom">
        ← Back to All Events
    </a>
    }

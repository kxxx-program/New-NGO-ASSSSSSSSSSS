@model IEnumerable<VolunteerVM>

@{
    ViewBag.Title = "My Volunteer History";
}

@section head {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 25px;
            border-radius: 12px;
            text-align: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .stat-label {
            font-size: 1.1rem;
            opacity: 0.9;
        }

        .volunteer-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            overflow: hidden;
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .volunteer-card:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            }

        .card-header {
            background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
            color: white;
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .event-title {
            font-size: 1.3rem;
            font-weight: bold;
            margin: 0;
        }

        .points-badge {
            background: rgba(255, 255, 255, 0.2);
            padding: 5px 15px;
            border-radius: 20px;
            font-weight: bold;
        }

        .card-body {
            padding: 20px;
        }

        .event-info {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
            margin-bottom: 15px;
        }

        .info-item {
            display: flex;
            align-items: center;
            gap: 8px;
            color: #666;
        }

        .info-icon {
            width: 20px;
            height: 20px;
            background: #3498db;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 10px;
        }

        .status-badge {
            display: inline-block;
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 0.85rem;
            font-weight: bold;
            text-transform: uppercase;
        }

        .status-active {
            background: #e8f5e8;
            color: #27ae60;
        }

        .status-donated {
            background: #fff3e0;
            color: #f57f17;
        }

        .status-completed {
            background: #e3f2fd;
            color: #1976d2;
        }

        .no-volunteers {
            text-align: center;
            padding: 60px 20px;
            color: #666;
        }

        .no-volunteers-icon {
            font-size: 4rem;
            margin-bottom: 20px;
            opacity: 0.5;
        }

        .testing-notice {
            background: #fff3cd;
            border: 1px solid #ffeaa7;
            color: #856404;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            text-align: center;
        }

        .action-buttons {
            margin-bottom: 20px;
            text-align: center;
        }

        .btn {
            margin: 5px;
        }
    </style>
}

<div class="container-fluid">
    <!-- Testing Notice -->
    <div class="testing-notice">
        <strong>🧪 TESTING MODE:</strong> This data is for testing purposes. Points are awarded automatically when you click volunteer/donate buttons.
    </div>

    <!-- Action Buttons for Testing -->
    <div class="action-buttons">
        <a href="@Url.Action("AddTestData")" class="btn btn-warning">
            🧪 Add Test Data
        </a>
        <a href="@Url.Action("Leaderboard")" class="btn btn-info">
            🏆 View Leaderboard
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="stats-container">
        <div class="stat-card">
            <div class="stat-number">@ViewBag.TotalPoints</div>
            <div class="stat-label">🏆 Total Points</div>
        </div>
        <div class="stat-card">
            <div class="stat-number">@ViewBag.TotalVolunteers</div>
            <div class="stat-label">🤝 Events Participated</div>
        </div>
        <div class="stat-card">
            <div class="stat-number">@(ViewBag.TotalVolunteers > 0 ? ViewBag.TotalPoints / ViewBag.TotalVolunteers : 0)</div>
            <div class="stat-label">📊 Avg Points/Event</div>
        </div>
    </div>

    @if (Model.Any())
    {
        <h2 class="mb-4">📋 Your Volunteer History</h2>

        @foreach (var volunteer in Model)
        {
            <div class="volunteer-card">
                <div class="card-header">
                    <h3 class="event-title">@volunteer.EventTitle</h3>
                    <div class="points-badge">+@volunteer.Points pts</div>
                </div>

                <div class="card-body">
                    <div class="event-info">
                        <div class="info-item">
                            <div class="info-icon">📅</div>
                            <strong>Event Date:</strong> @volunteer.EventDate.ToString("dd MMMM yyyy")
                        </div>

                        <div class="info-item">
                            <div class="info-icon">📍</div>
                            <strong>Location:</strong> @volunteer.EventLocation
                        </div>

                        <div class="info-item">
                            <div class="info-icon">🤝</div>
                            <strong>Volunteered:</strong> @volunteer.VolunteerDate.ToString("dd MMM yyyy HH:mm")
                        </div>

                        <div class="info-item">
                            <div class="info-icon">🆔</div>
                            <strong>Event ID:</strong> @volunteer.EventID
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <span class="status-badge @(volunteer.Status.ToLower() == "active" ? "status-active" :
                                                                                                               volunteer.Status.ToLower() == "donated" ? "status-donated" : "status-completed")">
                    @volunteer.Status
                </span>

                @if (volunteer.IsPastEvent)
                        {
                            <small class="text-muted">✅ Event Completed</small>
                        }
                        else
                        {
                            <small class="text-success">🔜 Upcoming Event</small>
                        }
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="no-volunteers">
            <div class="no-volunteers-icon">🤝</div>
            <h3>No Volunteer History Yet</h3>
            <p>Start volunteering for events to earn points and build your history!</p>
            <a href="@Url.Action("Index")" class="btn btn-primary">
                <i class="bi bi-calendar-event me-2"></i>Browse Events
            </a>
        </div>
    }

    <div class="text-center mt-4">
        <a href="@Url.Action("Index")" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left me-2"></i>Back to All Events
        </a>
    </div>
</div>
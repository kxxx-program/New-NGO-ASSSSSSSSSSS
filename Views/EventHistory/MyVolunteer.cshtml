@model MyActivitiesVM

@{
    ViewBag.Title = "My Activities";
}

<style>
    .stats-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 25px;
        border-radius: 15px;
        text-align: center;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
        }

        .stat-card.donation-card {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        }

    .stat-number {
        font-size: 1.8rem;
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
    }

    .stat-label {
        font-size: 1.1rem;
        opacity: 0.9;
    }

    .activity-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .activity-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

    .card-header {
        color: white;
        padding: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 10px;
    }

    .volunteer-header {
        background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
    }

    .donation-header {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    }

    .activity-title {
        font-size: 1.4rem;
        font-weight: bold;
        margin: 0;
        flex: 1;
        min-width: 200px;
    }

    .activity-badge {
        background: rgba(255, 255, 255, 0.2);
        padding: 8px 16px;
        border-radius: 25px;
        font-weight: bold;
        font-size: 1rem;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .card-body {
        padding: 25px;
    }

    .activity-info {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 20px;
    }

    .info-item {
        display: flex;
        align-items: center;
        gap: 10px;
        color: #555;
        font-size: 0.95rem;
    }

    .info-icon {
        width: 24px;
        height: 24px;
        background: #3498db;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 12px;
        flex-shrink: 0;
    }

    .donation-icon {
        background: #e74c3c;
    }

    .status-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 15px;
        padding-top: 15px;
        border-top: 1px solid #eee;
    }

    .status-badges {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .status-badge {
        display: inline-block;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: bold;
        text-transform: uppercase;
        border: 2px solid;
    }

    .badge-approved {
        background: #d4edda;
        color: #155724;
        border-color: #28a745;
    }

    .badge-pending {
        background: #fff3cd;
        color: #856404;
        border-color: #ffc107;
    }

    .badge-rejected {
        background: #f8d7da;
        color: #721c24;
        border-color: #dc3545;
    }

    .badge-completed {
        background: #cce5ff;
        color: #004085;
        border-color: #0066cc;
    }

    .badge-waiting {
        background: #e2e3e5;
        color: #383d41;
        border-color: #6c757d;
    }

    .badge-donation-completed {
        background: #d1ecf1;
        color: #0c5460;
        border-color: #17a2b8;
    }

    .event-status-indicator {
        font-size: 0.9rem;
        font-weight: 500;
    }

    .past-event {
        color: #6c757d;
    }

    .upcoming-event {
        color: #28a745;
        font-weight: bold;
    }

    .no-activities {
        text-align: center;
        padding: 80px 20px;
        color: #666;
    }

    .no-activities-icon {
        font-size: 5rem;
        margin-bottom: 20px;
        opacity: 0.3;
    }

    .page-header {
        text-align: center;
        margin-bottom: 40px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 40px 20px;
        border-radius: 15px;
    }

    .page-title {
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .page-subtitle {
        font-size: 1.1rem;
        opacity: 0.9;
    }

    .action-buttons {
        text-align: center;
        margin: 30px 0;
    }

    .btn-custom {
        padding: 12px 24px;
        border-radius: 25px;
        font-weight: 500;
        text-decoration: none;
        display: inline-block;
        margin: 0 10px 10px 0;
        transition: all 0.3s ease;
    }

    .btn-primary-custom {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
    }

        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(102, 126, 234, 0.4);
            color: white;
        }

    .btn-warning-custom {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
        border: none;
    }

        .btn-warning-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(245, 87, 108, 0.4);
            color: white;
        }

    .btn-outline-custom {
        background: white;
        color: #667eea;
        border: 2px solid #667eea;
    }

        .btn-outline-custom:hover {
            background: #667eea;
            color: white;
            transform: translateY(-2px);
        }

    .section-header {
        display: flex;
        align-items: center;
        gap: 10px;
        margin: 40px 0 20px 0;
        color: #2c3e50;
    }

    .section-title {
        font-size: 1.8rem;
        font-weight: bold;
        margin: 0;
    }
</style>

<div class="page-header">
    <h1 class="page-title">My Community Activities</h1>
    <p class="page-subtitle">Track your volunteering and donation contributions</p>
</div>

<!-- Enhanced Statistics Cards -->
<div class="stats-container">
    <div class="stat-card">
        <span class="stat-number">@ViewBag.TotalCombinedPoints</span>
        <div class="stat-label">Total Points Earned</div>
    </div>
    <div class="stat-card">
        <span class="stat-number">@ViewBag.TotalVolunteers</span>
        <div class="stat-label">Events Volunteered</div>
    </div>
    <div class="stat-card">
        <span class="stat-number">@ViewBag.CompletedEvents</span>
        <div class="stat-label">Events Completed</div>
    </div>
    <div class="stat-card donation-card">
        <span class="stat-number">@ViewBag.TotalDonations</span>
        <div class="stat-label">Total Donations</div>
    </div>
    <div class="stat-card donation-card">
        <span class="stat-number">RM@(ViewBag.TotalDonationAmount)</span>
        <div class="stat-label">Amount Donated</div>
    </div>
    <div class="stat-card">
        <span class="stat-number">@ViewBag.PendingApprovals</span>
        <div class="stat-label">Pending Approvals</div>
    </div>
</div>

<!-- Action Buttons -->
<div class="action-buttons">
    <a href="@Url.Action("Index", "Home")" class="btn-custom btn-primary-custom">
        Browse More Events
    </a>
    <a href="@Url.Action("Leaderboard")" class="btn-custom btn-warning-custom">
        View Leaderboard
    </a>
</div>

@if (Model.VolunteerHistory.Any() || Model.DonationHistory.Any())
{
    <!-- Volunteer Activities Section -->
    @if (Model.VolunteerHistory.Any())
    {
        <h2 class="section-header">
            <span class="section-title">Your Volunteer Activities</span>
        </h2>

        @foreach (var volunteer in Model.VolunteerHistory)
        {
            <div class="activity-card">
                <div class="card-header volunteer-header">
                    <h3 class="activity-title">@volunteer.EventTitle</h3>
                    <div class="activity-badge">
                        Volunteer | +@volunteer.Points pts
                    </div>
                </div>

                <div class="card-body">
                    <div class="activity-info">
                        <div class="info-item">
                            <div class="info-icon">📅</div>
                            <div>
                                <strong>Event Date:</strong><br>
                                @volunteer.FormattedEventDate
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="info-icon">📍</div>
                            <div>
                                <strong>Location:</strong><br>
                                @volunteer.EventLocation
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="info-icon">⏰</div>
                            <div>
                                <strong>Your Shift:</strong><br>
                                @volunteer.FormattedShiftStart
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="info-icon">🕒</div>
                            <div>
                                <strong>Work Hours:</strong><br>
                                @volunteer.WorkHours hours
                            </div>
                        </div>
                    </div>

                    <div class="status-section">
                        <div class="status-badges">
                            <span class="status-badge @(volunteer.ApprovalStatus == EventApprovalStatus.Approved ? "badge-approved" :
                                                                                        volunteer.ApprovalStatus == EventApprovalStatus.Pending ? "badge-pending" : "badge-rejected")">
                    @volunteer.ApprovalStatus
                </span>

                            <span class="status-badge @(volunteer.EventCompletion == EventStatus.Completed ? "badge-completed" :
                                                                            volunteer.EventCompletion == EventStatus.Waiting ? "badge-waiting" : "badge-rejected")">
                    @volunteer.EventCompletion
                </span>
            </div>

                        <div class="event-status-indicator">
                @if (volunteer.IsPastEvent)
                            {
                                <span class="past-event">Past Event</span>
                            }
                            else
                            {
                                <span class="upcoming-event">Upcoming Event</span>
                            }
                        </div>
                    </div>

                    <div class="mt-3">
                        <a href="@Url.Action("Details", new { id = volunteer.EventID })" class="btn btn-outline-info btn-sm">
                            View Event Details
                        </a>
                    </div>
                </div>
            </div>
        }
    }

    <!-- Donation Activities Section -->
    @if (Model.DonationHistory.Any())
    {
        <h2 class="section-header">
            <span class="section-title">Your Donation History</span>
        </h2>

        @foreach (var donation in Model.DonationHistory)
        {
            <div class="activity-card">
                <div class="card-header donation-header">
                    <h3 class="activity-title">@donation.EventTitle</h3>
                    <div class="activity-badge">
                        Donation | RM@(donation.Amount)
                    </div>
                </div>

                <div class="card-body">
                    <div class="activity-info">
                        <div class="info-item">
                            <div class="info-icon donation-icon">💰</div>
                            <div>
                                <strong>Amount:</strong><br>
                                RM@(donation.Amount.ToString("F2"))
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="info-icon donation-icon">💳</div>
                            <div>
                                <strong>Payment Method:</strong><br>
                                @donation.PaymentMethod
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="info-icon donation-icon">📅</div>
                            <div>
                                <strong>Donation Date:</strong><br>
                                @donation.DonationDate.ToString("dd MMM yyyy HH:mm")
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="info-icon donation-icon">🏆</div>
                            <div>
                                <strong>Points Earned:</strong><br>
                                @((int)donation.Amount) points
                            </div>
                        </div>
                    </div>

                    <div class="status-section">
                        <div class="status-badges">
                            <span class="status-badge badge-donation-completed">
                                @donation.Status
                            </span>
                        </div>

                        <div class="event-status-indicator">
                            <span class="upcoming-event">Donation Processed</span>
                        </div>
                    </div>

                    <div class="mt-3">
                        <a href="@Url.Action("Details", new { id = donation.EventID })" class="btn btn-outline-info btn-sm">
                            View Event Details
                        </a>
                    </div>
                </div>
            </div>
        }
    }
}
else
{
    <div class="no-activities">
        <div class="no-activities-icon">🤝</div>
        <h3>No Activities Yet</h3>
        <p>You haven't volunteered for any events or made any donations yet. Start making a difference today!</p>
        <div class="mt-4">
            <a href="@Url.Action("Index","Home")" class="btn-custom btn-primary-custom">
                Start Contributing
            </a>
        </div>
    </div>
}

<div class="text-center mt-5">
    <a href="@Url.Action("Index")" class="btn-custom btn-outline-custom">
        Back to All Events History
    </a>
</div>
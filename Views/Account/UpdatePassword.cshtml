@model UpdatePasswordVM

@{
    ViewBag.Title = "Account | Update Password";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">
                        <i class="fas fa-lock me-2"></i>Update Password
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-info" role="alert">
                        <i class="fas fa-shield-alt me-2"></i>
                        For your security, please enter your current password to confirm changes.
                    </div>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Current" class="form-label">
                                <i class="fas fa-lock me-2"></i>Current Password
                            </label>
                            <input asp-for="Current" class="form-control" placeholder="Enter your current password" autofocus>
                            <span asp-validation-for="Current" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="New" class="form-label">
                                <i class="fas fa-key me-2"></i>New Password
                            </label>
                            <input asp-for="New" class="form-control" placeholder="Enter new password (minimum 5 characters)">
                            <span asp-validation-for="New" class="text-danger"></span>
                            <div class="form-text">Password should be at least 5 characters long</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Confirm" class="form-label">
                                <i class="fas fa-check-circle me-2"></i>Confirm New Password
                            </label>
                            <input asp-for="Confirm" class="form-control" placeholder="Re-enter new password">
                            <span asp-validation-for="Confirm" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>Update Password
                            </button>
                            <button type="reset" class="btn btn-outline-secondary">
                                <i class="fas fa-undo me-2"></i>Reset Form
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center bg-light">
                    <div class="d-flex justify-content-between">
                        <a href="/Account/Login" class="btn btn-link">
                            <i class="fas fa-sign-in-alt me-1"></i>Login
                        </a>
                        <a href="/Account/Register" class="btn btn-link">
                            <i class="fas fa-user-plus me-1"></i>Register
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@model NGO_Web_Demo.Models.UpdateOrganiserProfileVM
@{
    ViewData["Title"] = "Update Organiser Profile";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user-edit me-2"></i>Update Organiser Profile
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateOrganiserProfile" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        @if (!string.IsNullOrEmpty(Model.PhotoURL))
                        {
                            <div class="row mb-4">
                                <div class="col-md-3">
                                    <div class="text-center">
                                        <h6 class="text-muted">Current Photo</h6>
                                        <img src="~/photos/@Model.PhotoURL" alt="Current Profile Photo"
                                             class="img-thumbnail" style="max-width: 150px; max-height: 150px;" />
                                    </div>
                                </div>
                                <div class="col-md-9">
                                    <div class="d-flex flex-column justify-content-center h-100">
                                        <p class="text-muted mb-2">
                                            <i class="fas fa-info-circle me-2"></i>
                                            This is your current profile photo. Upload a new photo below to replace it.
                                        </p>
                                        <small class="text-secondary">
                                            <strong>Email:</strong> @Model.Email (Cannot be changed)
                                        </small>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info mb-4">
                                <i class="fas fa-camera me-2"></i>
                                <strong>Email:</strong> @Model.Email (Cannot be changed)
                                <br>You don't have a profile photo yet. Upload one below!
                            </div>
                        }

                        <div class="mb-4">
                            <h5 class="text-secondary border-bottom pb-2">
                                <i class="fas fa-user me-2"></i>Personal Information
                            </h5>

                            <div class="mb-3">
                                <label asp-for="Name" class="form-label">Full Name</label>
                                <input asp-for="Name" class="form-control" placeholder="Enter your full name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Photo" class="form-label">Update Profile Photo</label>
                                <input asp-for="Photo" class="form-control" type="file" accept="image/*" />
                                <span asp-validation-for="Photo" class="text-danger"></span>
                                <div class="form-text">
                                    Leave empty to keep current photo. Supported formats: JPG, PNG, GIF. Max size: 2MB
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <h5 class="text-secondary border-bottom pb-2">
                                <i class="fas fa-building me-2"></i>Organisation Information
                            </h5>

                            <div class="mb-3">
                                <label asp-for="OrganisationName" class="form-label">Organisation Name</label>
                                <input asp-for="OrganisationName" class="form-control" placeholder="Enter organisation name" />
                                <span asp-validation-for="OrganisationName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="OrganisationAddress" class="form-label">Organisation Address</label>
                                <textarea asp-for="OrganisationAddress" class="form-control" rows="4"
                                          placeholder="Enter complete organisation address"></textarea>
                                <span asp-validation-for="OrganisationAddress" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="OrganisationPhone" class="form-label">Organisation Phone</label>
                                <input asp-for="OrganisationPhone" class="form-control" placeholder="Enter organisation phone number" />
                                <span asp-validation-for="OrganisationPhone" class="text-danger"></span>
                                <div class="form-text">Example: +60123456789 or 03-12345678</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-success btn-lg">
                                        <i class="fas fa-save me-2"></i>Update Profile
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-grid">
                                    <a asp-action="Organiser" asp-controller="Home" class="btn btn-outline-secondary btn-lg">
                                        <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="card-footer">
                    <div class="row text-center">
                        <div class="col-md-6">
                            <a asp-action="UpdatePassword" class="btn btn-warning btn-sm">
                                <i class="fas fa-key me-2"></i>Change Password
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a href="mailto:support@ngo.com" class="btn btn-info btn-sm">
                                <i class="fas fa-envelope me-2"></i>Need Help?
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById('Photo').addEventListener('change', function(e) {
            if (e.target.files && e.target.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const existingPreview = document.getElementById('new-photo-preview');
                    if (existingPreview) {
                        existingPreview.remove();
                    }

                    const preview = document.createElement('div');
                    preview.id = 'new-photo-preview';
                    preview.className = 'mt-3 text-center';
                    preview.innerHTML = `
                        <h6 class="text-success">New Photo Preview:</h6>
                        <img src="${e.target.result}" class="img-thumbnail" style="max-width: 150px; max-height: 150px;" />
                        <div class="form-text text-success">This will be your new profile photo</div>
                    `;

                    e.target.parentNode.appendChild(preview);
                };
                reader.readAsDataURL(e.target.files[0]);
            }
        });

        const textarea = document.getElementById('OrganisationAddress');
        if (textarea) {
            textarea.addEventListener('input', function() {
                this.style.height = 'auto';
                this.style.height = (this.scrollHeight) + 'px';
            });
        }
    </script>
}
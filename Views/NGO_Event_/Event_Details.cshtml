@using Azure
@model EventDetailsVM

@{
    ViewBag.Title = "Event Details | " + Model.Event_Title;
}

@* Check for both TempData for a success message and DonationAmount for a receipt *@
@if (TempData["Success"] != null && TempData["DonationAmount"] != null)
{
    // Retrieve the necessary data from TempData
    var donationAmount = TempData["DonationAmount"] as decimal?;
    var donorEmail = TempData["DonorEmail"] as string;
    var donationTime = TempData["DonationTime"] as DateTime?;

    <div class="alert alert-success alert-dismissible fade show donation-receipt-container" role="alert" style="margin: 20px auto; max-width: 1200px; border-radius: 8px;">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <i class="fas fa-check-circle me-2"></i>
                <strong>@TempData["Success"]</strong>
            </div>
            <div>
                <button type="button" class="btn btn-outline-success btn-sm me-2" onclick="printReceipt()" id="printReceiptBtn">
                    <i class="fas fa-print me-1"></i> Print Receipt
                </button>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>

        <div id="printableReceipt" style="display: none;">
            <div class="receipt-content">
                <div class="receipt-header">
                    <h2>NGO Donation Receipt</h2>
                    <hr>
                </div>
                <div class="receipt-body">
                    <div class="receipt-row">
                        <strong>Receipt Date:</strong> @(donationTime?.ToString("dd/MM/yyyy HH:mm") ?? DateTime.Now.ToString("dd/MM/yyyy HH:mm"))
                    </div>
                    <div class="receipt-row">
                        <strong>Donor:</strong> @(User.Identity.IsAuthenticated? User.Identity.Name : donorEmail)
                    </div>
                    <div class="receipt-row">
                        <strong>Donation Amount:</strong> RM @(donationAmount?.ToString("0.00") ?? "N/A")
                    </div>
                    <div class="receipt-row">
                        <strong>Event:</strong> @Model.Event_Title
                    </div>
                    <div class="receipt-row">
                        <strong>Location:</strong> @Model.Event_Location
                    </div>
                    <div class="receipt-row">
                        <strong>Event Date:</strong> @Model.Event_Start_Date.ToString("dd/MM/yyyy")
                    </div>
                    <hr>
                    <div class="receipt-success">
                        @TempData["Success"]
                    </div>
                    <hr>
                    <div class="receipt-footer">
                        <p>Thank you for your generous donation!</p>
                        <p><small>This receipt serves as confirmation of your donation to our NGO.</small></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .event-details-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .event-header {
        display: grid;
        grid-template-columns: 300px 1fr;
        gap: 30px;
        margin-bottom: 30px;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .event-image {
        width: 100%;
        height: 300px;
        object-fit: cover;
        border-radius: 12px 0 0 12px;
    }

    .event-image-placeholder {
        width: 100%;
        height: 300px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 18px;
        border-radius: 12px 0 0 12px;
    }

    .event-info {
        padding: 30px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .event-title {
        font-size: 2.5rem;
        font-weight: bold;
        color: #2c3e50;
        margin-bottom: 15px;
        line-height: 1.2;
    }

    .event-date {
        font-size: 1.3rem;
        color: #3498db;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .date-icon {
        width: 24px;
        height: 24px;
        background: #3498db;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 12px;
        font-weight: bold;
    }

    .event-status {
        display: inline-block;
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .status-upcoming {
        background-color: #e8f5e8;
        color: #27ae60;
        border: 2px solid #27ae60;
    }

    .status-past {
        background-color: #f8f8f8;
        color: #7f8c8d;
        border: 2px solid #bdc3c7;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        margin-top: auto;
    }

    .btn {
        padding: 12px 24px;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: bold;
        text-decoration: none;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s ease;
        flex: 1;
    }

    .btn-volunteer {
        background: linear-gradient(135deg, #ff6b6b, #ee5a52);
        color: white;
    }

        .btn-volunteer:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(238, 90, 82, 0.3);
            color: white;
            text-decoration: none;
        }

    .btn-donate {
        background: linear-gradient(135deg, #4ecdc4, #44a08d);
        color: white;
    }

        .btn-donate:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(68, 160, 141, 0.3);
            color: white;
            text-decoration: none;
        }

    .btn:disabled {
        background: #bdc3c7;
        cursor: not-allowed;
        transform: none;
        box-shadow: none;
    }

    .event-details {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .details-section {
        padding: 30px;
    }

    .section-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #2c3e50;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .location-icon, .description-icon {
        width: 24px;
        height: 24px;
        background: #3498db;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 12px;
    }

    .event-location {
        font-size: 1.2rem;
        color: #2c3e50;
        background: #f8f9fa;
        padding: 15px;
        border-radius: 8px;
        border-left: 4px solid #3498db;
    }

    .event-description {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #34495e;
        white-space: pre-wrap;
        background: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        border-left: 4px solid #3498db;
    }

    .back-button {
        margin-bottom: 20px;
    }

    .btn-back {
        background: #6c757d;
        color: white;
        padding: 10px 20px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 500;
        transition: background 0.3s ease;
    }

        .btn-back:hover {
            background: #5a6268;
            text-decoration: none;
            color: white;
        }

    /* Print Receipt Styles */
    .receipt-content {
        font-family: 'Courier New', monospace;
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        background: white;
    }

    .receipt-header {
        text-align: center;
        margin-bottom: 20px;
    }

        .receipt-header h2 {
            margin: 0;
            font-size: 1.5rem;
            color: #2c3e50;
        }

    .receipt-row {
        margin-bottom: 10px;
        padding: 5px 0;
    }

    .receipt-success {
        text-align: center;
        color: #27ae60;
        font-weight: bold;
        margin: 20px 0;
    }

    .receipt-footer {
        text-align: center;
        margin-top: 20px;
    }

    /* Print-specific styles */
    @@media print {
        body * {
            visibility: hidden;
        }

        #printableReceipt, #printableReceipt * {
            visibility: visible;
        }

        #printableReceipt {
            position: absolute;
            left: 0;
            top: 0;
            display: block !important;
            padding: 20px;
        }

        .receipt-content {
            box-shadow: none;
            border: 1px solid #000;
            page-break-inside: avoid;
        }
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .event-header {
            grid-template-columns: 1fr;
            gap: 0;
        }

        .event-image {
            height: 250px;
            border-radius: 12px 12px 0 0;
        }

        .event-image-placeholder {
            height: 250px;
            border-radius: 12px 12px 0 0;
        }

        .event-title {
            font-size: 2rem;
        }

        .action-buttons {
            flex-direction: column;
        }

        .event-details-container {
            padding: 10px;
        }
    }
</style>

<div class="event-details-container">
    <div class="back-button">
        @if (ViewBag.IsOrganiser == true)
        {
            <a asp-action="Event_Index" class="btn-back">Back to Events</a>
        }
        else
        {
            <a asp-action="Index" asp-controller="Home" class="btn-back">Back to Events</a>
        }
    </div>

    <div class="event-header">
        <div class="event-image-container">
            @if (!string.IsNullOrEmpty(Model.Event_PhotoURL))
            {
                <img src="/events/@Model.Event_PhotoURL" alt="@Model.Event_Title" class="event-image">
            }
            else
            {
                <div class="event-image-placeholder">
                    <span>Event Image</span>
                </div>
            }
        </div>

        <div class="event-info">
            <div>
                <h1 class="event-title">@Model.Event_Title</h1>

                <div class="event-date">
                    
                    <span>@Model.Event_Start_Date to @Model.Event_End_Date</span>
           
                </div>

                <div>
                    <span>@Model.Event_Start_Time to @Model.Event_End_Time</span>
                </div>

                @if (Model.IsPastEvent)
                {
                    <div class="event-status status-past">
                        Concluded Event
                    </div>
                }
                else if (Model.DaysUntilEvent == 0)
                {
                    <div class="event-status status-upcoming">
                        Event is Today!
                    </div>
                }
                else if (Model.DaysUntilEvent > 0)
                {
                    <div class="event-status status-upcoming">
                        @Model.DaysUntilEvent days to go
                    </div>
                }
            </div>

            <div class="action-buttons">
                @if (Model.IsPastEvent)
                {
                    <button class="btn btn-volunteer" disabled>
                        Volunteer (Concluded Event)
                    </button>
                    <button class="btn btn-volunteer" disabled>
                        Donate (Concluded Event is Past event)
                    </button>
                    //Feedback button
                    @if (Model.ProvideFeedback)
                    {
                        <a asp-controller="Feedback" asp-action="FeedbackForm"
                           asp-route-eventId="@Model.Event_Id"
                           class="btn btn-feedback">
                            Provide Feedback
                        </a>
                    }
                    else if (Model.SubmittedFeedback)
                    {
                        <button class="btn btn-feedback" disabled>
                            Feedback Submitted
                        </button>
                    }
                    //-------------
                }
                else
                {

                    <a asp-controller="Recruitment" asp-action="AddVolunteer" asp-route-eventId="@Model.Event_Id" class="btn btn-volunteer">
                        Volunteer Now
                    </a>


                    <a asp-controller="Payment" asp-action="Donation" asp-route-id="@Model.Event_Id" class="btn btn-donate">
                        Donate
                    </a>
                }
            </div>
        </div>
    </div>

    <div class="event-details">
        <div class="details-section">
            <h2 class="section-title">
                Location
            </h2>
            <div class="event-location">
                @Model.Event_Location
            </div>
        </div>

        <div class="details-section" style="border-top: 1px solid #e9ecef;">
            <h2 class="section-title">
                Description
            </h2>
            <div class="event-description">
                @Model.Event_Description
            </div>
        </div>
    </div>
</div>

<script>
    function printReceipt() {
        window.print();
    }
</script>


    @{
        ViewData["Title"] = "Organiser Dashboard";
        Layout = "_Layout";
    }

        <div class="container-fluid mt-4">
            <div class="row mb-4">
                <div class="col-12">
                    <div class="jumbotron bg-gradient-primary text-white p-4 rounded">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h1 class="display-4">
                                    <i class="fas fa-tachometer-alt me-3"></i>
                                    Welcome, @User.Identity.Name!
                                </h1>
                                <p class="lead">Organiser Dashboard - Manage your events and organisation activities</p>
                                <p class="mb-0">
                                    <i class="fas fa-calendar me-2"></i>
                                    Today is @DateTime.Now.ToString("dddd, MMMM dd, yyyy")
                                </p>
                            </div>
                            <div class="col-md-4 text-end">
                                <i class="fas fa-user-tie fa-5x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-lg-3 col-md-6 mb-3">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        My Events
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.MyEvents</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-calendar fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 mb-3">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Active Events
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.ActiveEvents</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-play-circle fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 mb-3">
                    <div class="card border-left-info shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                        Total Volunteers
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalVolunteers</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-users fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 mb-3">
                    <div class="card border-left-warning shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                        Pending Approvals
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.PendingApprovals</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-clock fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-8">
                    <div class="card shadow mb-4">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-calendar-check me-2"></i>Upcoming Events
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Event</th>
                                            <th>Date</th>
                                            <th>Location</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (ViewBag.RecentEvents != null)
                                        {
                                            @foreach (var evt in ViewBag.RecentEvents)
                                            {
                                                <tr>
                                                    <td>
                                                        <strong>@evt.EventTitle</strong><br>
                                                        <small class="text-muted">@(evt.EventDescription?.Length > 50 ? evt.EventDescription.Substring(0, 50) + "..." : evt.EventDescription)</small>
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-primary">@evt.EventStartDate.ToString("MMM dd, yyyy")</span>
                                                    </td>
                                                    <td>@evt.EventLocation</td>
                                                    <td>
                                                        <span class="badge bg-@(evt.EventStatus == "Upcoming" ? "info" :
                                                                                                                                                                                            evt.EventStatus == "Ongoing" ? "success" :
                                                                                                                                                                                            evt.EventStatus == "Active" ? "success" : "secondary")">
                                                @evt.EventStatus
                                            </span>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Event_Details", "NGO_Event_", new { id = evt.EventID })"
                                               class="btn btn-sm btn-outline-primary" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Event_Update", "NGO_Event_", new { id = evt.EventID })"
                                               class="btn btn-sm btn-outline-warning" title="Edit Event">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                                                        }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="5" class="text-center text-muted">
                                                    <i class="fas fa-calendar-times fa-3x mb-3 d-block"></i>
                                                    No events found. <a href="@Url.Action("Event_Create", "NGO_Event_")">Create your first event</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="text-center">
                                <a href="@Url.Action("Event_Index", "NGO_Event_")" class="btn btn-primary">
                                    <i class="fas fa-list me-2"></i>View All Events
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="card shadow">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-history me-2"></i>Recent Activity
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="timeline">
                                <div class="activity-item mb-3 p-3 border-left border-primary">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <strong>Dashboard accessed</strong><br>
                                            <small class="text-muted">Welcome back to your organiser dashboard</small>
                                        </div>
                                        <small class="text-muted">Just now</small>
                                    </div>
                                </div>

                                <div class="activity-item mb-3 p-3 border-left border-success">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <strong>Events updated</strong><br>
                                            <small class="text-muted">Your event data has been refreshed</small>
                                        </div>
                                        <small class="text-muted">Few minutes ago</small>
                                    </div>
                                </div>

                                <div class="activity-item mb-3 p-3 border-left border-info">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <strong>Statistics calculated</strong><br>
                                            <small class="text-muted">Dashboard statistics updated with latest data</small>
                                        </div>
                                        <small class="text-muted">Few minutes ago</small>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center">
                                <a href="@Url.Action("Event_Index", "NGO_Event_")" class="btn btn-outline-secondary">
                                    <i class="fas fa-history me-2"></i>View All Activity
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    @section Scripts {
            <script>
                document.addEventListener('DOMContentLoaded', function() {
                    // Animate statistics numbers
                    const stats = document.querySelectorAll('.h5.mb-0.font-weight-bold');
                    stats.forEach(function(stat) {
                        const finalValue = parseInt(stat.textContent);
                        if (finalValue > 0) {
                            let currentValue = 0;
                            const increment = Math.max(1, finalValue / 20);
                            const timer = setInterval(function() {
                                currentValue += increment;
                                if (currentValue >= finalValue) {
                                    currentValue = finalValue;
                                    clearInterval(timer);
                                }
                                stat.textContent = Math.floor(currentValue);
                            }, 50);
                        }
                    });

                    // Add hover effects to cards
                    const cards = document.querySelectorAll('.card');
                    cards.forEach(function(card) {
                        card.addEventListener('mouseenter', function() {
                            this.style.transform = 'translateY(-2px)';
                            this.style.transition = 'transform 0.2s ease-in-out';
                        });
                        card.addEventListener('mouseleave', function() {
                            this.style.transform = 'translateY(0)';
                        });
                    });
                });

                function refreshStats() {
                    // You can implement AJAX call here to refresh stats
                    console.log('Refreshing dashboard stats...');
                    // Example: location.reload();
                }

                // Auto-refresh every 5 minutes
                setInterval(refreshStats, 300000);
            </script>
    }


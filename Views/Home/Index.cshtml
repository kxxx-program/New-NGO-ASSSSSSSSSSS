@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<Event>

@{
    string[] fields = ["Photo", "EventTitle", "EventStartDate", "EventEndDate", "EventStartTime", "EventEndTime", "EventStatus", "EventLocation"];
}

<style>
    .search-section {
        background: #f8f9fa;
        border: 3px solid greenyellow;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .sort-section {
        background: #f8f9fa;
        border: 3px solid greenyellow;
        border-radius: 8px;
        margin-bottom: 30px;
    }

    .event-card {
        border: 3px solid greenyellow;
        border-radius: 8px;
        background: white;
        margin-bottom: 20px;
        transition: transform 0.2s;
    }

        .event-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .event-image-container {
        height: 180px;
        overflow: hidden;
        border-bottom: 2px solid #333;
    }

    .event-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .event-image-placeholder {
        height: 100%;
        background: #e9ecef;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6c757d;
        font-weight: 500;
    }

    .event-content {
        padding: 15px;
        height: auto;
        display: flex;
        flex-direction: column;
    }

    .event-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 8px;
        line-height: 1.3;
        height: 50px;
        overflow: hidden;
    }

    .status-badge {
        font-size: 0.7rem;
        font-weight: 600;
        padding: 3px 8px;
        border-radius: 20px;
        text-transform: uppercase;
        margin-bottom: 10px;
        display: inline-block;
        width: fit-content;
    }

    .status-upcoming {
        background-color: #cce7ff;
        color: #0066cc;
        border: 1px solid #0066cc;
    }

    .status-ongoing {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #28a745;
    }

    .status-concluded {
        background-color: #f8f9fa;
        color: #6c757d;
        border: 1px solid #6c757d;
    }

    .event-details {
        flex: 1;
        margin-bottom: 15px;
    }

    .event-detail-item {
        font-size: 0.8rem;
        margin-bottom: 4px;
        color: #555;
    }

    .event-detail-label {
        font-weight: 600;
        display: inline-block;
        width: 45px;
        color: #333;
    }

    .event-description {
        font-size: 0.75rem;
        color: #666;
        line-height: 1.4;
        margin-top: 8px;
        height: 32px;
        overflow: hidden;
    }

    .created-by {
        font-size: 0.7rem;
        color: #999;
        border-top: 1px solid #eee;
        padding-top: 8px;
        margin-top: auto;
    }

    .details-btn {
        background-color: #007bff;
        border: 2px solid #333;
        color: white;
        font-weight: 500;
        font-size: 0.85rem;
        padding: 8px 15px;
        border-radius: 5px;
        text-decoration: none;
        text-align: center;
        display: block;
        margin-top: auto;
        transition: all 0.2s;
    }

        .details-btn:hover {
            background-color: #0056b3;
            color: white;
            text-decoration: none;
            transform: translateY(-1px);
        }

    .search-input {
        border: 2px solid #333;
        border-radius: 5px;
        padding: 10px 15px;
        font-size: 1rem;
    }

        .search-input:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0,123,255,0.25);
        }

    .search-btn {
        background-color: #007bff;
        border: 2px solid #333;
        color: white;
        font-weight: 500;
        padding: 10px 20px;
        border-radius: 5px;
        transition: all 0.2s;
    }

        .search-btn:hover {
            background-color: #0056b3;
            transform: translateY(-1px);
        }

    .sort-btn {
        background-color: white;
        border: 2px solid #333;
        color: #333;
        font-weight: 500;
        font-size: 0.85rem;
        padding: 6px 12px;
        border-radius: 5px;
        text-decoration: none;
        margin-right: 8px;
        margin-bottom: 8px;
        display: inline-block;
        transition: all 0.2s;
    }

        .sort-btn:hover {
            background-color: green;
            text-decoration: none;
            color: #333;
            transform: translateY(-1px);
        }

        .sort-btn.active {
            background-color: #007bff;
            color: white;
            border-color: #007bff;
        }

    .section-title {
        font-size: 1.2rem;
        font-weight: 700;
        color: #333;
        padding: 0 5px;
    }

    .stats-card {
        background: white;
        border: 2px solid #333;
        border-radius: 8px;
        padding: 20px;
        text-align: center;
        margin-bottom: 20px;
    }

    .stats-number {
        font-size: 2rem;
        font-weight: 700;
        color: #007bff;
        margin-bottom: 5px;
    }

    .stats-label {
        font-size: 0.9rem;
        color: #666;
        font-weight: 500;
    }

    .no-events {
        background: white;
        border: 3px solid #333;
        border-radius: 8px;
        padding: 40px 20px;
        text-align: center;
    }

    .create-event-btn {
        background-color: #28a745;
        border: 2px solid #333;
        color: white;
        font-weight: 500;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        transition: all 0.2s;
    }

        .create-event-btn:hover {
            background-color: #218838;
            color: white;
            text-decoration: none;
            transform: translateY(-1px);
        }
</style>

<div class="container-fluid py-4 ">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4 fw-bold text-center mb-2">Welcome</h1>
            <p class="lead text-center text-muted">Discover and explore upcoming charity events</p>
        </div>
    </div>

    <!-- Search Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="search-section p-4">
                <h3 class="section-title">Search Bar</h3>
                <form class="form-inline d-flex">
                    <input type="search"
                           name="name"
                           value="@(ViewBag.Name?.ToString() ?? "")"
                           class="form-control search-input"
                           placeholder="Search events..."
                           style="min-width: 300px;" />
                    <input type="hidden" name="sort" value="@ViewBag.Sort" />
                    <input type="hidden" name="dir" value="@ViewBag.Dir" />
                    <button type="submit" class="btn btn-success">Search</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Sort Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="sort-section p-4">
                <h3 class="section-title">Sort</h3>
                <div class="d-flex flex-wrap justify-content-center">
                    @foreach (var f in fields)
                    {
                        string d = "asc";
                        bool isActive = f == ViewBag.Sort;

                        if (isActive)
                        {
                            d = ViewBag.Dir == "des" ? "asc" : "des";
                        }

                        string displayName = f.Replace("Event", "").Replace("Photo", "Image");

                        <a href="?name=@ViewBag.Name&sort=@f&dir=@d" class="sort-btn @(isActive ? "active" : "")">
                            @displayName
                            @if (isActive)
                            {
                                @if (ViewBag.Dir == "des")
                                {
                                    <span> ↓</span>
                                }
                                else
                                {
                                    <span> ↑</span>
                                }
                            }
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <!-- Events Grid -->
        <div class="row">
            @foreach (var e in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="event-card">
                        <!-- Event Image -->
                        <div class="event-image-container">
                            @if (!string.IsNullOrEmpty(e.EventPhotoURL))
                            {
                                <img src="/events/@e.EventPhotoURL" class="event-image" alt="@e.EventTitle">
                            }
                            else
                            {
                                <div class="event-image-placeholder">
                                    <strong>Event Card</strong>
                                </div>
                            }
                        </div>

                        <!-- Event Content -->
                        <div class="event-content">
                            <h5 class="event-title">@e.EventTitle</h5>

                            <!-- Status Badge -->
                            @{
                                string statusClass = e.EventStatus?.ToLower() switch
                                {
                                    "upcoming" => "status-badge status-upcoming",
                                    "ongoing" => "status-badge status-ongoing",
                                    "concluded" => "status-badge status-concluded",
                                    _ => "status-badge"
                                };
                            }
                            <span class="@statusClass">@e.EventStatus</span>

                            <!-- Event Details -->
                            <div class="event-details">
                                <div class="event-detail-item">
                                    <span class="event-detail-label">Date:</span>
                                    @e.EventStartDate.ToString("MMM dd") - @e.EventEndDate.ToString("MMM dd, yyyy")
                                </div>

                                <div class="event-detail-item">
                                    <span class="event-detail-label">Time:</span>
                                    @e.EventStartTime.ToString(@"hh\:mm") - @e.EventEndTime.ToString(@"hh\:mm")
                                </div>

                                <div class="event-detail-item">
                                    <span class="event-detail-label">Venue:</span>
                                    @e.EventLocation
                                </div>

                                @if (!string.IsNullOrEmpty(e.EventDescription))
                                {
                                    <div class="event-description">
                                        @if (e.EventDescription.Length > 60)
                                        {
                                            @(e.EventDescription.Substring(0, 60) + "...")
                                        }
                                        else
                                        {
                                            @e.EventDescription
                                        }
                                    </div>
                                }

                                @* Show Created By for Admins *@
                                @if (ViewBag.UserRole == "Admin" && !string.IsNullOrEmpty(e.CreatedBy))
                                {
                                    <div class="created-by">
                                        Created by @e.CreatedBy
                                    </div>
                                }
                            </div>

                            <!-- Action Button -->
                            <a href="@Url.Action("Event_Details", "NGO_Event_", new { id = e.EventID })"
                               class="details-btn">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.PageCount > 1)
        {
            <div class="row mt-4">
                <div class="col-12 d-flex justify-content-center">
                    @{
                        var options = PagedListRenderOptions.ClassicPlusFirstAndLast;
                        options.LinkToFirstPageFormat = "First";
                        options.LinkToLastPageFormat = "Last";
                        options.LinkToPreviousPageFormat = "Previous";
                        options.LinkToNextPageFormat = "Next";
                        options.UlElementClasses = new[] { "pagination" };
                        options.LiElementClasses = new[] { "page-item" };
                        options.PageClasses = new[] { "page-link" };
                    }
                    @Html.PagedListPager(Model, page => Url.Action("Event_Index", new { name = ViewBag.Name, sort = ViewBag.Sort, dir = ViewBag.Dir, page }), options)
                </div>
            </div>
        }
    }
    else
    {
        <!-- No Events Found -->
        <div class="row">
            <div class="col-12">
                <div class="no-events">
                    <h4 class="mb-3">No Events Found</h4>

                    @if (ViewBag.ShowingMyEvents == true)
                    {
                        <p class="mb-4">You haven't created any events yet. Start by creating your first event!</p>
                        <a href="@Url.Action("Event_Insert")" class="create-event-btn">
                            Create Your First Event
                        </a>
                    }
                    else if (!string.IsNullOrEmpty(ViewBag.Name))
                    {
                        <p class="mb-4">No events match your search criteria. Try adjusting your search or browse all events.</p>
                        <a href="@Url.Action("Event_Index")" class="create-event-btn">
                            Show All Events
                        </a>
                    }
                    else
                    {
                        <p class="mb-4">There are currently no events available. Be the first to create an event!</p>
                        <a href="@Url.Action("Event_Insert")" class="create-event-btn">
                            Create First Event
                        </a>
                    }
                </div>
            </div>
        </div>
    }
</div>


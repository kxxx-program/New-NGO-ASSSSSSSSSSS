@inject DB db
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="/images/favicon.png">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap">
    <link rel="stylesheet" href="/css/pager.css">
    <link rel="stylesheet" href="/css/app.css" asp-append-version="true">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        .nav-item.dropdown .dropdown-menu {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            z-index: 1000;
        }

        .nav-item.dropdown:hover .dropdown-menu {
            display: block;
        }

        .nav-item.dropdown .dropdown-menu {
            transition: opacity 0.3s ease, visibility 0.3s ease;
        }

        .nav-item.dropdown {
            position: relative;
        }

        .session-status-bar {
            background: linear-gradient(90deg, #28a745 0%, #ffc107 70%, #dc3545 100%);
            height: 3px;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 9998;
            transition: all 0.3s ease;
            display: none;
        }

        .session-info {
            position: fixed;
            top: 10px;
            right: 10px;
            background: rgba(0, 0, 0, 0.8);
            color: white;
            padding: 8px 12px;
            border-radius: 5px;
            font-size: 12px;
            z-index: 9997;
            display: none;
        }

        .toast-container {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 9999;
        }

        .modal-content {
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }

        .pulse-animation {
            animation: pulse 1.5s infinite;
        }
    </style>

    @RenderSection("Styles", false)
    @RenderSection("head", false)
</head>
<body data-authenticated="@(User.Identity.IsAuthenticated ? "true" : "false")">

    <div id="sessionStatusBar" class="session-status-bar"></div>
    <div id="sessionInfo" class="session-info"></div>

    @if (TempData["Info"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" style="margin: 0; border-radius: 0;">
            @Html.Raw(TempData["Info"])
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert" style="margin: 0; border-radius: 0;">
            @Html.Raw(TempData["Warning"])
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert" style="margin: 0; border-radius: 0;">
            @Html.Raw(TempData["Error"])
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <header>
        <h1><a href="/">NGO</a></h1>

        @if (User.Identity!.IsAuthenticated)
        {
            <div class="user-info" data-user="@User.Identity.Name">
                @User.Identity.Name |
                @(User.IsInRole("Admin") ? "Admin" : "")
                @(User.IsInRole("Organiser") ? "Organiser" : "")
                @(User.IsInRole("Member") ? "Member" : "")

                <span id="sessionTimer" style="display: none; margin-left: 15px;">
                    <i class="fas fa-clock"></i>
                    <span id="sessionTimeRemaining">--:--</span>
                </span>
            </div>
        }

        @* Member photo *@
        @if (User.IsInRole("Member"))
        {
            var photoURL = db.Members.Find(User.Identity!.Name)!.PhotoURL;
            <img src="/photos/@photoURL" />
        }
    </header>

    <nav>
        <b>Home</b>
        <a href="/Home/Index">Index</a>
        <a href="/ContentPosting/Gallery">Gallery</a>

        <b>Event</b>
        @if (User.IsInRole("Admin") || User.IsInRole("Organiser"))
        {
            <a href="/NGO_Event_/Event_Index">Index</a>
            <a href="/NGO_Event_/Event_Insert">Insert</a>
        }

        @if (User.Identity.IsAuthenticated)
        {
            <a href="/ContentPosting/Posting_Index">Your Postings</a>
            <a href="/ContentPosting/Posting_Insert">Add a post</a>
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link text-white" href="#" id="navbarDropdown" role="button">Event History</a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="/EventHistory/Index">All Events History</a></li>
                        <li><a class="dropdown-item" href="/EventHistory/MyVolunteer">Personal Volunteer</a></li>
                    </ul>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link text-white" href="#" id="leaderboardDropdown" role="button">Leaderboard</a>
                    <ul class="dropdown-menu" aria-labelledby="leaderboardDropdown">
                        <li><a class="dropdown-item" href="/EventHistory/Leaderboard">🏆 Volunteer Leaderboard</a></li>
                    </ul>
                </li>
            </ul>
        }

        <div>
            @if (User.IsInRole("Admin"))
            {
                <a href="/Home/Admin">Admin</a>
            }
            @if (User.IsInRole("Organiser"))
            {
                <a href="/Home/Organiser">Organiser</a>
            }
        </div>
        @if (User.Identity!.IsAuthenticated)
        {
            <a href="/Account/Logout">Logout</a>
            <a href="/Account/UpdatePassword">Update Password</a>
        }
        else
        {
            <a href="/Account/Login">Login</a>
            <a href="/Account/Register">Register</a>
            <a href="/Account/RegisterOrganiser">Register as Organiser</a>
            <a href="/Account/ResetPassword">Reset Password</a>
        }
        @if (User.IsInRole("Member"))
        {
            <a href="/UpdateProfile/Index">Update Profile</a>
            <a href="/Account/RegisterOrganiser">Register as Organiser</a>
        }
        @if (User.IsInRole("Organiser"))
        {
            <a href="/UpdateProfile/Index">Update Profile</a>
        }
    </nav>

    <main>
        <h1>@ViewBag.Title</h1>
        @RenderBody()
    </main>

    <footer>
        Developed by <b>BAE SUZY</b> &middot;
        Copyrighted &copy; @DateTime.Today.Year
    </footer>

    <div id="toast-container" class="toast-container position-fixed bottom-0 end-0 p-3"></div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="/js/jquery.min.js"></script>
    <script src="/js/jquery.unobtrusive-ajax.min.js"></script>
    <script src="/js/jquery.validate.min.js"></script>
    <script src="/js/jquery.validate.unobtrusive.min.js"></script>
    <script src="/js/app.js" asp-append-version="true"></script>

    @if (User.Identity.IsAuthenticated)
    {
        <script src="~/js/sessionTimeout.js"></script>
    }

    @RenderSection("Scripts", false)
    @RenderSection("foot", false)
</body>
</html>
@inject DB db
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="/images/favicon.png">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap">
    <link rel="stylesheet" href="/css/pager.css">
    <link rel="stylesheet" href="/css/app.css" asp-append-version="true">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    @RenderSection("head", false)
</head>
<body>
    <div class="info">@Html.Raw(TempData["Info"])</div>

    <header>
        <h1><a href="/">NGO</a></h1>

        @* User email and role *@
        @if (User.Identity!.IsAuthenticated)
        {
            <div>
                @User.Identity.Name |
                @(User.IsInRole("Admin") ? "Admin" : "")
                @(User.IsInRole("Organiser") ? "Organiser" : ""))
                @(User.IsInRole("Member") ? "Member" : "")
            </div>
        }

        @* Member photo *@
        @if (User.IsInRole("Member"))
        {
            var photoURL = db.Members.Find(User.Identity!.Name)!.PhotoURL;
            <img src="/photos/@photoURL" />
        }
    </header>

    <nav>
        <b>Home</b>
        <a href="/Home/Index">Index</a>
        <b>Event</b>
        @if (User.IsInRole("Admin") || User.IsInRole("Organiser"))
        {
            <a href="/NGO_Event_/Event_Index">Index</a>
            <a href="/NGO_Event_/Event_Insert">Insert</a>
        }

        @if (User.Identity.IsAuthenticated)
        {

            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link text-white" href="#" id="navbarDropdown" role="button">Event History</a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="/EventHistory/Index">All Events History</a></li>
                        <li><a class="dropdown-item" href="/EventHistory/MyVolunteer">Personal Volunteer</a></li>
                    </ul>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link text-white" href="#" id="leaderboardDropdown" role="button">Leaderboard</a>
                    <ul class="dropdown-menu" aria-labelledby="leaderboardDropdown">
                        <li><a class="dropdown-item" href="/EventHistory/Leaderboard">🏆 Volunteer Leaderboard</a></li>
                    </ul>
                </li>
            </ul>
        }

        <div>
            @* Menu trimming *@
            @* @if (User.Identity.IsAuthenticated)
            {
                <a href="/Home/Both">Both</a>
            }
            @if (User.IsInRole("Member"))
            {
                <a href="/Home/Member">Member</a>
            } *@
            @if (User.IsInRole("Admin"))
            {
                <a href="/Home/Admin">Admin</a>
            }
            @if (User.IsInRole("Organiser"))
            {
                <a href="/Home/Organiser">Organiser</a>
            }
        </div>
        @if (User.Identity!.IsAuthenticated)
        {
            <a href="/Account/Logout">Logout</a>
            <a href="/Account/UpdatePassword">Update Password</a>
        }
        else
        {
            <a href="/Account/Login">Login</a>
            <a href="/Account/Register">Register</a>
            <a href="/Account/RegisterOrganiser">Register as Organiser</a>
            <a href="/Account/ResetPassword">Reset Password</a>
        }
        @if (User.IsInRole("Member"))
        {
            <a href="/Account/UpdateProfile">Update Profile</a>
            <a href="/Account/RegisterOrganiser">Register as Organiser</a>
        }
        @if (User.IsInRole("Organiser"))
        {
            <a href="/Account/UpdateOrganiserProfile">Update Profile</a>
        }
    </nav>

    <main>
        <h1>@ViewBag.Title</h1>
        @RenderBody()
    </main>

    <footer>
        Developed by <b>BAE SUZY</b> &middot;
        Copyrighted &copy; @DateTime.Today.Year
    </footer>

    <script src="/js/jquery.min.js"></script>
    <script src="/js/jquery.unobtrusive-ajax.min.js"></script>
    <script src="/js/jquery.validate.min.js"></script>
    <script src="/js/jquery.validate.unobtrusive.min.js"></script>
    <script src="/js/app.js" asp-append-version="true"></script>
    @RenderSection("Scripts", false)
    @RenderSection("foot", false)

</body>

<head>
    <style>
        /* Ensure the dropdown menu is hidden by default */
        .nav-item.dropdown .dropdown-menu {
            display: none;
            position: absolute;
            top: 100%; /* Places the dropdown directly below the nav item */
            left: 0;
            z-index: 1000;
        }
        /* Show the dropdown when hovering over the parent nav item */
        .nav-item.dropdown:hover .dropdown-menu {
            display: block;
        }
        /* Optional: Add some transitions for a smoother hover effect */
        .nav-item.dropdown .dropdown-menu {
            transition: opacity 0.3s ease, visibility 0.3s ease;
        }
        /* Make sure the menu doesn't jump around */
        .nav-item.dropdown {
            position: relative;
        }
    </style>
</head>
</html>

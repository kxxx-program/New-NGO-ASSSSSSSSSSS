@model IEnumerable<NGO_Web_Demo.Models.FeedbackVM>

@{
    ViewBag.Title = "Feedback List";
}

<div class="container mt-4">
    <h2 class="mb-4">Event Feedbacks</h2>

    @if (Model.Any())
    {
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Feedback ID</th>
                    <th>Event</th>
                    <th>Location</th>
                    <th>Event Dates</th>
                    <th>Rating</th>
                    <th>Comments</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var f in Model)
                {
                    <tr>
                        <td>@f.FeedbackID</td>
                        <td>@f.EventTitle</td>
                        <td>@f.EventLocation</td>
                        <td>@f.EventStartDate.ToShortDateString() - @f.EventEndDate.ToShortDateString()</td>
                        <td>
                            <span class="badge bg-primary">@f.Rating / 5</span>
                        </td>
                        <td>
                            @if (string.IsNullOrWhiteSpace(f.Comments))
                            {
                                <em>No comments</em>
                            }
                            else
                            {
                                @f.Comments
                            }
                        </td>
                        <td>
                            <form asp-action="DeleteFeedback" asp-route-id="@f.FeedbackID" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm"
                                        onclick="return confirm('Are you sure you want to delete this feedback?');">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            No feedback has been submitted yet.
        </div>
    }
</div>
